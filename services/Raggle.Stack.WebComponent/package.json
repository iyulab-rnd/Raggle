{
  "name": "@iyulab/hive-components",
  "description": "hive ui components",
  "version": "0.1.0",
  "author": {
    "name": "iyulab",
    "url": "https://www.iyulab.com"
  },
  "license": "MIT",
  "type": "module",
  "main": "./src/index.js",
  "module": "./src/index.js",
  "types": "./src/index.d.ts",
  "scripts": {
    "build": "vite build",
    "publish": "npm publish"
  },
  "exports": {
    ".": {
      "require": "./src/index.js",
      "import": "./src/index.js",
      "types": "./src/index.d.ts"
    },
    "./*": {
      "require": "./src/*/index.js",
      "import": "./src/*/index.js",
      "types": "./src/*/index.d.ts"
    },
    "./styles/*": {
      "import": "./static/styles/*.css"
    },
    "./components/*": {
      "require": "./src/components/*/index.js",
      "import": "./src/components/*/index.js",
      "types": "./src/components/*/index.d.ts"
    },
    "./components/modal/*": {
      "require": "./src/components/modal/*.js",
      "import": "./src/components/modal/*.js",
      "types": "./src/components/modal/*.d.ts"
    }
  },
  "dependencies": {
    "lit": "^3.2.1",
    "mobx": "^6.13.6"
  },
  "devDependencies": {
    "@shoelace-style/shoelace": "^2.20.0",
    "postcss": "^8.5.3",
    "postcss-nesting": "^13.0.1",
    "sass": "^1.85.1",
    "sass-loader": "^16.0.5",
    "typescript": "^5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.3"
  }
}
